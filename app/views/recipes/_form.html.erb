<%= form_for recipe do |r| %>
  <%= r.label :name %>
  <%= r.text_field :name %><br><br>

  <%= r.fields_for :ingredients_attributes do |ingredient| %>
    <%= ingredient.label 'Ingredients:' %>
    <%= ingredient.text_field :name %>

  <% end %>

  <%= r.collection_select :recipe, :ingredient_ids, Ingredient.all, :id, :name, prompt: true %>

  <%= r.submit %>
<% end %>