<h2>Add a comment:</h2>
<%= form_for([@recipe, @comment], remote: true, action: comments_path, method: 'post' ) do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :recipe_id, value: @recipe.id %>

  <%= f.label :content %><br>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>